@{
    ViewData["Title"] = "Home Page";
}
@using NUglify.Helpers
@model RoomsViewModel.ZooObject

@{
    if (Model != null && Model.zoom_rooms.Any())
    {
        for (int i = 0; i < Model.zoom_rooms.Count; i++)
        {
            <div class="col-sm-3 col-lg-3" id="divMain">
                <div class="dash-unit">
                    <dtitle>@Model.zoom_rooms[i].room_name</dtitle>
                    <hr>
                    <div class="cont2">
                        @if (@Model.zoom_rooms[i].status == "Available")
                        {
                            <p><bold>Status</bold> | <ok>@Model.zoom_rooms[i].status</ok></p>
                            <br>
                        }
                        else
                        {
                            <p><bold>Status</bold> | <bad>Offline</bad></p>
                            <br>
                        }

                    </div>

                </div>
            </div>

        }
    }
    else
    {
            <h1>No Records found</h1>
    }

}
